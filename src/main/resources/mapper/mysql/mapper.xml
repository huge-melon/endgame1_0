<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shixin.endgame.dao.mysql.MysqlMapper">

    <!--获取表格数据-->
    <select id="getData" resultType="java.util.Map">
        SELECT
        A.*,ROWNUM as key FROM ${table_name} A
    </select>
    <!--Oracle 获取所有表-->
    <select id="getTables" resultType="java.util.Map">
       SELECT table_name from information_schema.tables where table_schema= #{db_name}
    </select>

    <!--从指定数据库、指定的表中选择数据-->
    <!--
    column_name 列名
    data_type 数据类型
    COLUMN_TYPE 列的更底层的数据类型
    COLUMN_KEY 主键

    -->
    <!--SELECT column_name from information_schema.columns where table_schema='usertest' and table_name='user';-->
    <!--从表中读取所有数据-->

    <select id="getAlldata" resultType="java.util.Map">
        SELECT * FROM ${table_name}
    </select>
    <select id="selectAllUser" resultType="java.lang.String">
        select name from user
    </select>
</mapper>